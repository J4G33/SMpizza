<div class="bg-white">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-8">
      <div class="lg:col-span-5 lg:col-start-8">
        <div class="flex justify-between">
          <h1 class="text-xl font-medium text-gray-900">Limited Offer</h1>
          <p class="text-xl font-medium text-gray-900">$12.99</p>
        </div>
        <div class="mt-4">
          <div class="flex items-center">
            <p class="text-sm text-gray-700">
              3.9
              <span class="sr-only"> out of 5 stars</span>
            </p>
            <div class="ml-1 flex items-center">
              <svg class="size-5 shrink-0 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z" clip-rule="evenodd" />
              </svg>
              <a href="https://www.yelp.com/search?find_desc=best+pizza&find_loc=Chandler%2C+AZ" class="ml-4 text-sm font-medium text-indigo-600 hover:text-indigo-500">
                See all 512 reviews
              </a>
            </div>
          </div>
        </div>

        <!-- **Move Order Now Button Here** -->
        <div class="mt-4">
          <%= link_to "Order Now", order_path, class: "w-full flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-12 py-4 text-lg font-medium text-white hover:bg-indigo-700" %>
        </div>
      </div>

      <div class="mt-8 lg:col-span-7 lg:col-start-1 lg:row-span-3 lg:row-start-1 lg:mt-0">
        <h2 class="sr-only">Images</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 lg:grid-rows-3 lg:gap-8">
          <%= image_tag "cheese.jpg", alt: "Delicious cheese pizza", class: "rounded-lg lg:col-span-2 lg:row-span-2", id: "pizza-image", data: { pizza_type: "cheese", pizza_target: "image" } %>
        </div>
      </div>
    </div>
  </div>
</div>
